<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/continu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainContinue"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="Powered By -"
        android:textSize="14sp"
        tools:ignore="HardcodedText,TextSizeCheck" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="38dp"
        android:gravity="center"
        android:text="ESP32 Dev Module V1"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/layout_background2"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"
        android:padding="5dp"
        android:topLeftRadius="16dp"
        android:topRightRadius="16dp">

        <ImageView
            android:id="@+id/myImageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/esp32_21"
            tools:ignore="ContentDescription" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:text="The ESP32 Dev Module V1 is a low-cost, Wi-Fi-enabled microcontroller, ideal for IoT porjects, featuring GPIO pins, Lua scripting and compatibility with Arduino IDE for programing."
        android:textSize="14sp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/button_background1"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>