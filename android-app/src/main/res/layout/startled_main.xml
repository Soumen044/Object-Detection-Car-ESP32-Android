<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingClass"


    tools:context=".MainStartLed"
    android:id="@+id/startled"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED System"
        android:layout_marginTop="5dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:gravity="center"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/layout_background2"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="6dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/layout_background4"
                    >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="To controll The Led System, here's your ESP32 MCU's IP Address -" />

                    <EditText
                        android:id="@+id/ipadd"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="192.168.4.1"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ipadd"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:text=" Follow the RULES :"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:layout_marginTop="0dp"
                        android:layout_marginHorizontal="25dp"
                        android:text="1. Connect to the WI-FI." />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview8"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="0dp"
                        android:text="2. Keep away from Water." />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="110dp"
                        android:background="@drawable/button_background1"
                        android:text="Start"
                        android:textSize="25sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resources :"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Here's the Circuit Diagram -"
                    android:layout_weight="1"
                    android:layout_marginVertical="15dp"
                    />

                    <ImageButton

                        android:id="@+id/circuitdiagramledsystem"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/layout_background3"
                        android:src="@drawable/led_01"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Here's the Document -"
                    android:layout_weight="1"
                    android:layout_marginVertical="15dp"
                    />

                    <ImageButton

                        android:id="@+id/documentledsystem"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/layout_background3"
                        android:src="@drawable/led_01"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Here's the Arduino Program -"
                        android:layout_weight="1"
                        android:layout_marginVertical="15dp"
                        />

                    <ImageButton

                        android:id="@+id/arduinocodeledsystem"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/layout_background3"
                        android:src="@drawable/led_01"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>