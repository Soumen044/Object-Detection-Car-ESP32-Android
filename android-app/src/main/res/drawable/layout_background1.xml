<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="30dp" />
    <solid android:color="@color/light_orange" />
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
            <shape>
                <solid android:color="#99000000" /> <!-- Shadow Color -->
                <corners android:radius="0dp" />
            </shape>
        </item>
    </layer-list>
        <stroke
            android:width="8dp"
            android:color="#326F6F6F">

            <!-- Reduce the width to make the stroke visible without covering the solid color -->

        </stroke>
</shape>
