<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.EspController2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set the windowSplashScreenBackground attribute -->
        <item name="windowSplashScreenBackground">@color/colorPrimary</item> <!-- Define this color in colors.xml -->
    </style>

    <style name="Theme.EspController2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/dark_purple</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.EspController2.dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/dark_purple</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.EspController2.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

</resources>
